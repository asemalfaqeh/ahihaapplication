<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroungmain"

    android:orientation="vertical"
    tools:context="app.ahiha.pro.ahihaapplication.MainActivity"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="16dp"
                android:text="asem@yahoo.com"
                android:gravity="center"
                android:id="@+id/emailview"
                tools:ignore="HardcodedText,SpUsage" />

            <Button
                android:text="الملف الشخصي"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:textColor="#ffffff"
                android:textSize="26dp"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/iconmainbtn"
                tools:ignore="HardcodedText,SpUsage" />

            <Button
                android:text="عرض المراكز الصحية"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button11"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:padding="4dp"
                android:textSize="26dp"
                android:textColor="#ffffff"
                android:background="@drawable/iconmainbtn"
                tools:ignore="HardcodedText,SpUsage" />

            <Button
                android:text="النصائح والأرشادات"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button12"
                android:layout_marginTop="8dp"
                android:textColor="#ffffff"
                android:padding="4dp"
                android:background="@drawable/iconmainbtn"
                android:textSize="26dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SpUsage" />

            <Button
                android:text="خروج"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/iconmainbtn"
                android:padding="4dp"
                android:textColor="#ffffff"
                android:textSize="28dp"
                android:textStyle="bold"
                android:id="@+id/button13"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:text="حالة الاتصال"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkconnection"
                android:padding="16dp"
                android:textSize="14dp"
                android:gravity="center"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
