<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_reset_passowrd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="app.ahiha.pro.ahihaapplication.Auth.ResetPassowrdActivity">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/reset_passowrd_input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Email"
        android:layout_marginTop="140dp"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/MyTextInputLayoutErrorText">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/reset_password_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="fill_horizontal"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:nextFocusDown="@+id/second_edit_text"
            tools:ignore="Deprecated" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="ارسال"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/button8"
        android:layout_gravity="center_vertical"
        android:background="@drawable/loginbtnstyle"
        tools:ignore="HardcodedText,SpUsage,UnusedAttribute"
        android:elevation="5dp" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        android:id="@+id/progressBar2" />

</LinearLayout>
